{
    "name": "grep2file",
    "displayName": "grep2file",
    "description": "grep word and output result to file",
    "version": "0.2.0",
    "publisher": "yuna611d",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.grepResult2File"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.grepResult2File",
                "title": "Grep to File"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Excluded File Extensions",
            "properties": {
                "grep2file.exclude": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": [
                        "bin",
                        "dll",
                        "sln"
                    ],
                    "description": "List up file extensions that you don't want to do grep."
                },
                "grep2file.ignoreHiddenFile": {
                    "type": "boolean",
                    "default": true,
                    "description": "Hidden files are not checked if true is specified"
                },
                "grep2file.outputFileName": {
                    "type": "string",
                    "default": "grep2File.g2f",
                    "description": "File name that is outputted grep result."
                },
                "grep2file.outputContentFormat": {
                    "type": "string",
                    "default": "txt",
                    "description": "File type format of content that is outputted grep result."
                },
                "grep2file.outputTitle": {
                    "type": "boolean",
                    "default": true,
                    "description": "Specification whether to output the title to the result file."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yuna611d/GrepExtension.git"
    }
}
